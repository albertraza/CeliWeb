@{
    ViewBag.Title = "GroupsForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Nueva Familia</h2>

<div class="row">
    <form id="newGroup">
        <div class="col-sm-2">

        </div>
        <div class="col-sm-5">
            <div class="form-group">
                <label>Nombre</label>
                <input required id="js-name" type="text" name="name" class="form-control" />
            </div>
            <div class="form-group">
                <label>Tipo de Pago</label>
                <div class="tt-container">
                    <input id="js-paymentTypes" data-rule-isVIPCheckedValidator="true" data-rule-isVIPValidator="true" data-rule-isForGroupsValidator="true" data-rule-validPaymentType="true" type="text" name="paymentType" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label>
                    <input id="js-isVIP" type="checkbox" name="isVip" /> Es VIP?
                </label>
            </div>
            <div class="form-group">
                <label>Estudiante</label>
                <div class="tt-container">
                    <input data-rule-validStudent="true" id="js-student" type="text" name="student" class="form-control" />
                </div>
            </div>

            <button class="btn btn-primary">Guardar</button>

        </div>
        <div class="col-sm-5">
            <h3>Estudiantes</h3>
            <ul id="js-students" class="list-group"></ul>
        </div>
    </form>
</div> 