@model CelyWeb.ViewModels.StudentsViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Students</h2>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Seccion</th>
            <th>Tipo de Pago</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model.Students)
        {
            <tr>
                <td><a href="/Students/Details/@student.Id">@student.Name @student.LastName</a></td>
                <td>@student.Seccion.Nivel</td>
                <td>@student.PaymentType.Type</td>
            </tr>
        }
    </tbody>
</table>