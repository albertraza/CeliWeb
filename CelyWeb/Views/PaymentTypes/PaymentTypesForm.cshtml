@model CelyWeb.ViewModels.PaymentTypesViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using(Html.BeginForm("Save", "PaymentTypes"))
{
    <div class="row">
        <div class="col-md-4">

        </div>
        <div class="col-md-4">
            <h2>Tipo de Pago</h2>

            <div class="form-group">
                @Html.LabelFor(m => m.PaymentType.Type)
                @Html.TextBoxFor(m => m.PaymentType.Type, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.PaymentType.Type)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PaymentType.Amount)
                @Html.TextBoxFor(m => m.PaymentType.Amount, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.PaymentType.Amount)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PaymentType.DaysToPay)
                @Html.TextBoxFor(m => m.PaymentType.DaysToPay, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.PaymentType.DaysToPay)
            </div>
            <div class="form-group">
                <label>
                    @Html.CheckBoxFor(m => m.PaymentType.IsVIP) Es para Pagos VIPs?
                </label>
            </div>
            <div class="form-group">
                <label>
                    @Html.CheckBoxFor(m => m.PaymentType.IsForGroups) Es para pagos Familiares?
                </label>
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
        <div class="col-md-4">

        </div>
    </div>
}
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    }
